.help-container
  .breadcrumb 
    li a 
      color: #5d6ab1

  .page-sidebar .nav-pills > li.active > a, .page-sidebar .nav-pills > li.active > a:hover, .page-sidebar .nav-pills > li.active > a:focus
    background-color: #2BC0D7


  .help-content
    h1
      margin-top: 0

    ul
      position: relative
      padding: 0
      

      li
        max-width: 100%
        padding: 0 0 0 20px
        list-style-position: inside
        a
          color: #2BC0D7
        
      
    a.btn.btn-primary.btn-lg
      background-color: #238cc9

.stats
  .forums-total-container
    padding: 15px
    border-radius: 5px;
    background-color: #238cc9

    

    .data-value, .data-title
      display: block
      color: #FFF
      font-size: 1.4rem
      background-color: #238cc9
    .data-title
      background-color: #238cc9
      font-weight: 700
    @media screen and (min-width: 750px)

      .data-value, .data-title
        font-size: 2rem
      .data-title
        float: left
      .data-value
        float: right;
      .help-content 
        img
          width: 100vw
  .text-center
    text-align: center !important
    .text-primary 
      color: #2BC0D7 !important
  .subtitle
    font-weight: 300
